<%= form_tag("/orders", method: "post") do %>
<input type="hidden" value="<%= @delivery_cost %>" name="delivery_cost"/>
<input type="hidden" value="<%= @total_cost %>" name="total_cost"/>
<%= label_tag(:user_name, "User name:") %>
<%= text_field_tag(:user_name) %><br/>
<%= label_tag(:address, "Address:") %>
<%= text_field_tag(:address) %><br/>
<%= label_tag(:phone, "Phone:") %>
<%= text_field_tag(:phone) %><br/>
<%= submit_tag("Confirm this order", class: "btn btn-primary btn-lg") %>
<% end %>
<br/>
<h1>Your cart items</h1>
<% @cart_items.each do |k, v| %>
******************** <br/>
---- ID: <%= @cart_items[k]["id"] %> <br/>
---- Name: <%= @cart_items[k]["name"] %> <br/>
---- Price: <%= number_with_precision(@cart_items[k]["price"], precision: 0) %> VND<br/>
---- Quantity: <%= @cart_items[k]["quantity"] %> <br/>
---- Total: <%= number_with_precision(@cart_items[k]["total"], precision: 0) %> VND<br/>
<br/>
<% end %>
**************************************** <br/>
---- Delivery cost: <%= number_with_precision(@delivery_cost, precision: 0) %> VND<br/>
---- Total cost: <%= number_with_precision(@total_cost, precision: 0) %> VND<br/>
<br/>
